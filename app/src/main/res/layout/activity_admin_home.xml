<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminHomeActivity">

    <TextView
        android:id="@+id/tvAHmonumentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#FBD8B0"
        android:text="Monument Name"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvAHnoOfVisitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAHmonumentName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Number of visitors predicted:"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/tvAHpredictedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAHmonumentName"
        app:layout_constraintLeft_toRightOf="@id/tvAHnoOfVisitors"
        android:text="20000"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:background="#FBD8B0"
        />
    <Button
        android:id="@+id/btnAHopenScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAHnoOfVisitors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:backgroundTint="#FBD8B0"
        android:text="Open Scanner"
        />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAHconfirm"
        app:layout_constraintTop_toBottomOf="@id/btnAHopenScanner"
        android:orientation="vertical"
        android:fillViewport="true">
    <TextView
        android:id="@+id/tvAHScannedTicketInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:paddingBottom="40dp"

        android:text="User Info\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nUser Info"
        android:textSize="20dp"

        />
        <!--   Bad practice of code Shivam for layout padding bottom!     -->
    </ScrollView>
    <Button
        android:id="@+id/btnAHconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Confirm Ticket"
        android:backgroundTint="#FBD8B0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SCROLLER_ID"/>

    <ProgressBar
        android:id="@+id/progressbarvisitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>